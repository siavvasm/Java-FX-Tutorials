<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.Controller">

    <Label text="Difficulty :"/>

    <!-- A reusable toggle group -->
    <fx:define>
        <ToggleGroup fx:id="togGroup"/>
</fx:define>>
    <RadioButton text="Easy" toggleGroup="$togGroup"/>
    <RadioButton text="Medium" toggleGroup="$togGroup"/>
    <RadioButton text="Hard" toggleGroup="$togGroup"/>

</VBox>